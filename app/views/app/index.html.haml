%html
  %head
    %title Consensus Chat
    = stylesheet_link_tag "app/application"
    = csrf_meta_tag
    = meta_tag "handle", current_user.email
    %script{:charset => "utf-8", :src => "http://localhost:8080/application.js", :type => "text/javascript"}
    = javascript_include_tag "application"

    :javascript
      window.user_email = "#{@user.email}"


  %body
    %header#title
      %h1= link_to( "Consensus Chat", "/app")
      %ul
        %li= link_to("Home", "/")
    #wrapper
      #sidebar
        %h3 Meetings
        %ul#channels
        %h3 Users
        %ul#users
        %h3 Options
        %ul#options
          %li{"data-name" => "settings"} Settings
      .vdivide
      #content
        #messages
          %ul.items
          .new
            %textarea
            %button Send
        #settings
          %h2 Channels
          %ul.channels
          %h2 Create Channel
          .createChannel
            %form
              %input{:placeholder => "Channel name", :type => "text"}
                %button.pill New Channel
          %div= link_to "Logout", log_out_path


    = script_template "message"
    = script_template "channels"
    = script_template "users"
    = script_template "edit_channel"